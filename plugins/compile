#!/usr/bin/env bash
# plugins/compile <build-dir> <cache-dir>

# fail fast
set -e

# parse args
BUILD_DIR=$1
CACHE_DIR=$2

# clean up leaking environment
unset GIT_DIR

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

BOOTSTRAP=$BUILD_DIR/plugins/bootstrap/css/bootstrap.scss
BOOTSTRAP_LESS=$BUILD_DIR/plugins/bootstrap/less/bootstrap.less
BOOTSTRAP_RESPONSIVE=$BUILD_DIR/plugins/bootstrap/css/bootstrap-responsive.scss
BOOTSTRAP_RESPONSIVE_LESS=$BUILD_DIR/plugins/bootstrap/less/responsive.less
mkdir $BUILD_DIR/plugins/bootstrap/css
lessc --compile ${BOOTSTRAP_LESS} > ${BOOTSTRAP}
lessc --compile ${BOOTSTRAP_RESPONSIVE_LESS} > ${BOOTSTRAP_RESPONSIVE}